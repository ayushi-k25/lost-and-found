        <!-- Tabs for Lost and Found -->
        <div class="tabs">
            <button id="lost-tab-btn" class="tab-btn active" onclick="showTab('lost')">Lost Items</button>
            <button id="found-tab-btn" class="tab-btn" onclick="showTab('found')">Found Items</button>
        </div>
        
        <!-- Search Filters -->
        <div id="search">
            <select id="search-type">
                <option value="lost">Lost</option>
                <option value="found">Found</option>
            </select>
            <input id="search-name" placeholder="Search by name">
            <select id="search-category">
                <option value="">All Categories</option>
                <option value="electronics">Electronics</option>

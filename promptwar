    <script>
        async function displayItems(type, nameFilter = '', catFilter = '') {
            const list = document.getElementById(`${type}-list`);
            if (!list) return;
            list.innerHTML = '';
            try {
                const response = await fetch(`http://localhost:3000/api/${type}`);
                const items = await response.json();
                const filtered = items.filter(item => {
                    return (nameFilter === '' || item.name.toLowerCase().includes(nameFilter.toLowerCase())) &&
                           (catFilter === '' || item.category === catFilter);
                });
                filtered.forEach(item => {
                    const div = document.createElement('div');
                    div.className = 'item';
                    div.innerHTML = `
                        <h3>${item.name}</h3>
                        <p>Category: ${item.category}</p>
                        <p>${item.description}</p>
                        <p>Date: ${item.date}</p>
                        <p>Venue: ${item.venue}</p>
                    `;
                    const img = document.createElement('img');
                    img.src = item.imageUrl || 'https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=300&q=80';
                    img.alt = item.name;
                    div.appendChild(img);
                    list.appendChild(div);
                });
            } catch (error) {
                console.error('Error fetching items:', error);
                list.innerHTML = '<p>Error loading items. Please try again later.</p>';
            }
        }

        async function submitLost() {
            const name = document.getElementById('lost-name').value;
            const category = document.getElementById('lost-category').value;
            const description = document.getElementById('lost-desc').value;
            const date = document.getElementById('lost-date').value;
            const venue = document.getElementById('lost-venue').value;
            const file = document.getElementById('lost-image').files[0];
            
            if (!name || !category || !description || !date || !venue) {
                alert('Please fill all required fields.');
                return;
            }
            
            const formData = new FormData();
            formData.append('name', name);
            formData.append('category', category);
            formData.append('description', description);
            formData.append('date', date);
            formData.append('venue', venue);
            if (file) formData.append('image', file);
            
            try {
                const response = await fetch('http://localhost:3000/api/lost', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                if (result.success) {
                    document.getElementById('lost-form').reset();
                    alert('Lost item reported successfully!');
                    showTab('lost');
                } else {
                    alert('Error submitting item. Please try again.');
                }
            } catch (error) {
                console.error('Error submitting lost item:', error);
                alert('Error submitting item. Please try again.');
            }
        }

        async function submitFound() {
            const name = document.getElementById('found-name').value;
            const category = document.getElementById('found-category').value;
            const description = document.getElementById('found-desc').value;
            const date = document.getElementById('found-date').value;
            const venue = document.getElementById('found-venue').value;
            const file = document.getElementById('found-image').files[0];
            
            if (!name || !category || !description || !date || !venue) {
                alert('Please fill all required fields.');
                return;
            }
            
            const formData = new FormData();
            formData.append('name', name);
            formData.append('category', category);
            formData.append('description', description);
            formData.append('date', date);
            formData.append('venue', venue);
            if (file) formData.append('image', file);
            
            try {
                const response = await fetch('http://localhost:3000/api/found', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                if (result.success) {
                    document.getElementById('found-form').reset();
                    alert('Found item reported successfully!');
                    showTab('found');
                } else {
                    alert('Error submitting item. Please try again.');
                }
            } catch (error) {
                console.error('Error submitting found item:', error);
                alert('Error submitting item. Please try again.');
            }
        }

        function showTab(tabId) {
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));
            const targetTab = document.getElementById(tabId);
            if (targetTab) targetTab.classList.add('active');
            
            const buttons = document.querySelectorAll('.tab-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            const targetBtn = document.getElementById(`${tabId}-tab-btn`);
            if (targetBtn) targetBtn.classList.add('active');
            
            if (tabId === 'lost' || tabId === 'found') {
                displayItems(tabId);
            }
        }

        function searchItems() {
            const type = document.getElementById('search-type').value;
            const name = document.getElementById('search-name').value;
            const category = document.getElementById('search-category').value;
            showTab(type);
            displayItems(type, name, category);
        }

        // Initial load
        showTab('lost');
    </script>
</body>
